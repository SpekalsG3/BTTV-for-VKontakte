{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.0",
  "default_locale": "en",
  "description": "__MSG_extDesc__",
  "icons": {
    "64": "icons/64px.png",
    "128": "icons/128px.png",
    "512": "icons/512px.png"
  },
  "background": {
    "scripts": ["src/common.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/64px.png",
      "128": "icons/128px.png",
      "512": "icons/512px.png"
    },
    "default_title": "BTTV for VKontakte",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["*://vk.com/*"],
    "css": ["src/bttv_for_vk.css"],
    "js": ["src/index.js"]
  }],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": ["src/bttv_for_vk.js"]
}